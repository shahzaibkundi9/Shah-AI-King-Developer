PORT=3001
NODE_ENV=development

# sessions directory (relative)
SESSIONS_DIR=./sessions

# Backend webhook to forward incoming messages
BACKEND_WEBHOOK=http://localhost:4000/api/whatsapp/incoming

# Redis (optional) for rate-limiting/counters
REDIS_URL=redis://localhost:6379

# Cloudinary for media upload
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Anti-ban tuning
WA_MAX_MSG_PER_MIN=60
WA_TYPING_MIN_MS=800
WA_TYPING_MAX_MS=2200
